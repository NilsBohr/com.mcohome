{
  "id": "change_thermostat_mode_setpoint",
  "title": {
    "en": "Set a setpoint of a thermostat mode",
    "nl": "Stel de temperatuur in van een thermostaat modus"
  },
  "titleFormatted": {
    "en": "Set the thermostat mode [[setpointMode]] to [[setpointValue]] °C",
    "nl": "Stel de thermostaat modus [[setpointMode]] in naar [[setpointValue]] °C"
  },
  "hint": {
    "en": "Change the setpoint of a specific thermostat mode (Comfort / Energy Saving / Heating). Note: does NOT activate this mode",
    "nl": "Stel de temperatuur in van een thermostaat modus (Comfort / Energy Saving / Heating). Let op: activeert deze modus niet"
  },
  "args": [
    {
      "name": "device",
      "type": "device",
      "filter": "driver_id=MH7|MH7H"
    },
    {
      "name": "setpointMode",
      "type": "dropdown",
      "title": {
        "en": "Select the thermostat mode",
        "nl": "Selecteer de thermostaat modus"
      },
      "values": [
        {
          "id": "Heat",
          "label": {
            "en": "Manual",
            "nl": "Manueel"
          }
        },
        {
          "id": "Energy Save Heat",
          "label": {
            "en": "Auto",
            "nl": "Auto"
          }
        },
        {
          "id": "AWAY",
          "label": {
            "en": "Away",
            "nl": "Afwezig"
          }
        }
      ]
    },
    {
      "name": "setpointValue",
      "type": "range",
      "title": {
        "en": "Select the thermostat setpoint",
        "nl": "Selecteer de thermostaat temperatuur"
      },
      "min": 5,
      "max": 37,
      "step": 0.5,
      "label": "°C",
      "labelDecimals": 1
    }
  ]
}
